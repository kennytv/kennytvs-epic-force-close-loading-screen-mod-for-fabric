{
  "schemaVersion": 1,
  "id": "forcecloseloadingscreen",
  "version": "${version}",

  "name": "kennytv's epic force close loading screen mod for Fabric",
  "description": "Force closes the level receiving screen instead of having to wait for the chunks you're in to be sent",
  "authors": [
    "kennytv"
  ],
  "contact": {
    "sources": "https://github.com/kennytv/kennytvs-epic-force-close-loading-screen-mod-for-fabric"
  },

  "license": "MIT",
  "icon": "assets/forcecloseloadingscreen/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "eu.kennytv.forcecloseloadingscreen.ForceCloseLoadingScreenMod"
    ],
    "modmenu": [
      "eu.kennytv.forcecloseloadingscreen.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "forcecloseloadingscreen.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "1.18.2",
    "java": ">=17"
  },
  "suggests": {
    "cloth-config": "*",
    "modmenu": "*"
  }
}
